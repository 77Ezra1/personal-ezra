{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pms-web",
  "version": "0.1.0",
  "identifier": "com.pms.web",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  },
  "app": {
    "security": {
      "capabilities": ["default"]
    },
    "windows": [
      {
        "title": "pms-web",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  }
}
