{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Personal",
  "version": "0.1.0",
  "identifier": "com.pms.web",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "external-open",
        "fs-appdata",
        "sqlite"
      ]
    },
    "windows": [
      {
        "title": "Personal",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  }
}
