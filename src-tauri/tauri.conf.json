{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Personal",
  "version": "0.1.0",
  "identifier": "com.pms.web",
  "build": {
    "beforeDevCommand": "cross-env VITE_DESKTOP=1 pnpm dev",
    "beforeBuildCommand": "cross-env VITE_DESKTOP=1 pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller",
        "silent": true
      },
      "nsis": {
        "installerIcon": "icons/installer.ico",
        "languages": [
          "SimpChinese"
        ],
        "customLanguageFiles": {
          "SimpChinese": "installer/nsis/SimpChinese.nsh"
        }
      }
    }
  },
  "plugins": {
    "shell": {
      "open": "(mailto:\\w+|tel:\\w+|https?://.+|/.*|[A-Za-z]:\\\\.*)"
    }
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "external-open",
        "fs-appdata",
        "sqlite",
        "dialog"
      ]
    },
    "windows": [
      {
        "title": "Personal",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  }
}
